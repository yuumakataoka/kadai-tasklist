<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |task| %>
        <li><%= task %></li>
      </ul>
    </div>
  <% end %>  

  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.submit "タスクの追加" %>
<% end %>  
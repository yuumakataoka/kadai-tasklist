<div class="row">
  <div class="col-xs-12"></div>
</div>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2"></div>
</div>
<div class="row">
  <div class="col-md-8 col-md-offset-2"></div>
</div>  
<div class="row">
  <div class="col-lg-6 col-lg-offset-6"></div>
</div>  
   <%= form_for(task) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% task.errors.full_messages.each do |task| %>
              <li><%= task %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :status, 'タイトル' %>
        <%= f.text_field :status, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>

      <%= f.submit 'タスクの追加', class: 'btn btn-primary' %>
    <% end %>